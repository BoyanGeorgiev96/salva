        %div
          = f.label "Seleccionar aÃ±o"
        %select{name:'year'}
          - @years.each do |year|
            - if year.to_s==params[:year]
              %option{value: year, selected:year}
                =year
            - elsif params[:year]==nil and year.to_s==(@years.last-1).to_s
