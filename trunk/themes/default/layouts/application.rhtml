<html>
<head>
  <title> <% head_title %> </title>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <meta name="description"  content="Plataforma de informaci&oacute;n curricular SALVA" />
  <meta name="copyright" content="Universidad Nacional Aut&oacute;noma de M&eacute;xico" />
  <link rel="icon" href="/images/favicon.ico" />
  <%= stylesheet_link_tag 'form', 'administration', 'ligthbox', 'ajax_scaffold', 'test', :media => 'all' %>
  <%= javascript_include_tag 'prototype', 'scriptaculous', 'application', 'unittest' %>
  <%= javascript_include_tag 'overlib' %>
</head>
<body>
<div class="site">
<a href="<%= get_cfg('institution_url') %>" target="_new"> <%= get_cfg('institution') %></a>
</div> <!-- /site -->
<div class="container">
<div class="container_border">
   <div class="topbar">
        <img src="/images/logo_salva.png" border="0" >
         PLATAFORMA DE INFORMACI&Oacute;N CURRICULAR
   </div> <!-- /topbar -->
   <div class="toplinks">
   <%= get_label('login') %>: <span class="logged_user"><%= logged_user%> </span> |
   <%= link_to('Ayuda', { :controller => 'help' })%> |
   <%= link_to('Salir', { :controller => 'user', :action => 'logout'}) %> |
   <a href="/trac/newticket" target="_new"> Soporte t√©cnico </a>
   </div> <!-- /toplinks -->
   <div class="title">
     <%=  render_component :controller => "navigator", :action => "trail_of_controllers" %><%= controller_title %>
   </div> <!-- title -->
   <div class="navbar">
    <b>Men&uacute; de navegaci&oacute;n:</b> <%=  render_component :controller => "navigator", :action => "navbar" %>
   </div> <!-- /navbar -->
   <div class="formbox">
   <% if flash[:notice] %>
   <p style="color: green"> <%= flash[:notice] %></p>
   <% end %>
     <%= yield %>
   </div> <!-- /formbox -->
   <%=  render_component :controller => "navigator", :action => "navcontrol", :params => { :controller_name => controller_name } %>
</div> <!-- /container_border -->
</div> <!-- /container -->
<%= render :partial => 'salva/ajax_unit_test' if params[:debug_ajax].to_i == 1%>
</body>
</html>

