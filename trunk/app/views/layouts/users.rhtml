<html>
<head>
  <title> <% head_title %> </title>
  <meta http-equiv="Content-Type" content="text/html; charset=<%= charset %>" /> 
  <meta name="description"  content="<%= getstr('description') %> - Plataforma de informaci&oacute;n curricular SALVA" /> 
  <meta name="copyright" content="<%= getstr('copyright') %>" />
  <link rel="icon" href="<%= icon %>" />
  <%= stylesheet_link_tag style %>
</head>
<body>
<div id="topbar">
<%= getstr('user') %>: <span class="user"><%= @user %></span>| 
<a href="<%= help_link %>" target="_new"> <%= getstr('help') %></a> | 
<a href="<%= logout_link %>"><%= getstr('logout') %></a> | 
<a href="<%= sendbug_link %>"> <%= getstr('sendbug') %></a> 
</div>

<div id="title">
<img src="/images/<%= title_icon %>" border="0" align="middle">
<%= getcn('title') %>
</div>

<div class="box">
  <p style="color: green"><%= flash[:notice] %></p> 
<%= @content_for_layout %>
</div>
</body>
</html>
