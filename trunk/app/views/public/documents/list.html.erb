<center> <h3> <%= @document_title %></h3></center>
<br />

<% for h in @collection %>
<table class="list">
  <tr>
    <th><%= h[:adscription] %></th>
    <th>*</th>
  </tr>
   <% for record in h[:docs] %>
  <tr class="even">
    <td class="item" style="width: 90%;"><%= link_to record.user.person.fullname, :action => :show, :id => record.id %></td>
	<td class="link"><%= show_link(record.id) %></td>
  </tr>
<% end %>
</table>
<br />
<% end %>
<b>Total de documentos:</b> <%= @total_docs %></b>