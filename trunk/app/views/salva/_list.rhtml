<%= start_form_tag :action => 'list_selected' %>
<table class="list">
  <tr>
    <th>*</th>
    <th><%= @header %></th>
    <th>Opciones</th>
  </tr>
<% @rowcolor = 1 %>  
<% for item in @list %>
  <tr class="<%= @rowcolor == 1 ? 'odd' : 'even' %>" >
  <% @rowcolor == 1 ? @rowcolor = 0 : @rowcolor = 1 %>
    <td><%= check_box(item['id']) %> </td>
    <td><%=item['cell_content']%></td>
    <td class="link"><%= show_link({:id => item['id']}) %> <%= edit_link({:id => item['id']}) %> <%= purge_link({:id => item['id'], :question => 'Desea borrar este elemento?'}) %></td>
  </tr>
<% end %>
</table>
<%= submit_tag "Borrar elementos seleccionados" %>
<% if @pages %>
PÃ¡gina de resultados: <%= pagination_links(@pages) %> <br/>
<% end %>
<%= end_form_tag %>
