<div class="row">
<label for="thesis_id" class="label"><%= get_label('thesis_id') %> <span class="required">*</span></label>
<div id="thesis_id">
 <%= select_conditions('edit', Thesis,1, {:attributes => %w( title year)}) %>
</div>
<%= quickpost('thesis') %>
</div>

<div class="row">
<label for="roleinthesis_id" class="label"><%= get_label('roleinthesis_id') %> <span class="required">*</span></label>
<div id="roleinthesis_id">
<%= select_conditions('edit', Roleinthesis, 2, {:attributes => %w( name),  :conditions => "name = 'Director' OR name = 'Asesor' OR name = 'Lector' "}) %>
</div>
</div>


<div class="row">
<label for="other" class="label"><%= get_label('other') %></label>
