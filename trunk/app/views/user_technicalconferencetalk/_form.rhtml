<div class="row"> 
<label for="conferencetalk_id" class="label"><%= get_label('conferencetalk_id') %></label> 
<div id="conferencetalk_id">
<%= select_as_tree('edit', Conferencetalk, %w(title talktype_id), 1, 1, {:conditions => "conferences.istechnical = 't' AND conferences.conferencetype_id = 1 AND conferencetalks.conference_id = conferences.id", :include => [:conference] }) %>
</div>
<%= submit_for_stack('technicalconferencetalk,conferencetalk_id') %>
</div>

