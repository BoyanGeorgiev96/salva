<label for="spoken_languagelevel_id" class="label"><%= get_label('spoken_languagelevel_id') %> <span class="required">*</span></label> 
<div id="spoken_languagelevel_id">
<%= table_select('edit', Languagelevel, 2, 1, 'spoken') %>
</div>
</div>

<div class="row"> 
<label for="written_languagelevel_id" class="label"><%= get_label('written_languagelevel_id') %> <span class="required">*</span></label> 
<div id="written_languagelevel_id">
<%= table_select('edit', Languagelevel, 3, 1, 'written') %>
</div>
</div>

<div class="row"> 
 <label for="institution_id" class="label"><%= get_label('institution_id') %> <span class="required">*</span></label> 
 <%= render :partial => 'salva/filter_institutions' %>
