<div class="row"> 
<label for="language_id" class="label"><%= get_label('language_id') %> <span class="required">*</span></label> 
<div id="language_id">
  <%= simple_select('edit', Language, 1) %> 
  <%= submit_for_stack('language') %>
</div>
</div>

